@model List<LibraryManagement.Models.BorrowRequestModel>
@{
    ViewData["Title"] = "Pending Requests";
}

<div class="container mt-4">
    <h2>Pending Borrow Requests</h2>

    @if (TempData["Success"] != null)
    {
            <div class="alert alert-success">@TempData["Success"]</div>
    }
    @if (TempData["Error"] != null)
    {
            <div class="alert alert-danger">@TempData["Error"]</div>
    }

    <div class="card">
        <div class="card-body">
            @if (Model != null && Model.Count > 0)
            {
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Request ID</th>
                                <th>Student Name</th>
                                <th>Book Name</th>
                                <th>Request Date</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                        @foreach (var item in Model)
                        {
                                    <tr>
                                        <td>@item.RequestId</td>
                                        <td>@item.StudentName</td>
                                        <td>@item.BookName</td>
                                        <td>@item.RequestDate.ToString("MMM dd, yyyy")</td>
                                        <td>
                                            <form method="post" action="/LibrarianDashboard/ApproveRequest" style="display: inline;">
                                                <input type="hidden" name="requestId" value="@item.RequestId">
                                                <button type="submit" class="btn btn-success btn-sm">Approve</button>
                                            </form>
                                            <form method="post" action="/LibrarianDashboard/RejectRequest" style="display:inline;">
                                                <input type="hidden" name="requestId" value="@item.RequestId">
                                                <button type="submit" class="btn btn-danger btn-sm">Reject</button>
                                            </form>
                                        </td>
                                    </tr>
                        }
                        </tbody>
                    </table>
            }
            else
            {
                    <p class="text-muted text-center">No pending requests.</p>
            }
        </div>
    </div>

    <a href="/LibrarianDashboard" class="btn btn-secondary mt-3">Back to Dashboard</a>
</div>