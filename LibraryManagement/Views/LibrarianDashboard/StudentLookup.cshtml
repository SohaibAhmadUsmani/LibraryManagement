@model IEnumerable<LibraryManagement.Models.User>

@{
    ViewData["Title"] = "Student Lookup";
}

<div class="container-fluid">
    <h2 class="fw-bold mb-4"><i class="fas fa-users me-2"></i>Student Lookup</h2>

    <div class="card border-0 bg-light mb-4">
        <div class="card-body">
            <form method="get" class="d-flex gap-2">
                <input type="text" name="search" class="form-control form-control-lg" placeholder="Enter student name or email...">
                <button class="btn btn-primary btn-lg px-4">Search</button>
            </form>
        </div>
    </div>

    <div class="card shadow-sm border-0">
        <div class="card-body p-0">
            <table class="table table-hover align-middle mb-0">
                <thead class="bg-light">
                    <tr>
                        <th class="ps-4">Name</th>
                        <th>Email</th>
                        <th>Status</th>
                        <th class="text-end pe-4">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (!Model.Any())
                    {
                            <tr><td colspan="4" class="text-center py-4 text-muted">No students found. Try searching.</td></tr>
                    }
                    else
                    {
                        @foreach (var item in Model)
                        {
                                    <tr>
                                        <td class="ps-4 fw-bold">@item.Name</td>
                                        <td>@item.Email</td>
                                        <td><span class="badge bg-success">Active</span></td>
                                        <td class="text-end pe-4">
                                            <a asp-action="StudentHistory" asp-route-name="@item.Name" class="btn btn-sm btn-info text-white rounded-pill px-3">
                                                <i class="fas fa-history me-1"></i> History
                                            </a>
                                        </td>
                                    </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>