@model LibraryManagement.Models.LibrarianDashboardModel
@{
    ViewData["Title"] = "Librarian Dashboard";
}

@if (TempData["message"] != null)
{
        <div class="alert alert-success">@TempData["message"]</div>
}

<div class="container mt-4">
    <!-- Librarian Dashboard Banner Image -->
    <div class="dashboard-banner mb-4">
        <img src="~/images/librarian.jpg" alt="Librarian Dashboard Banner"
             class="img-fluid rounded shadow" style="max-height:300px; object-fit:cover; width:100%;" />
    </div>

    <h2>Librarian Dashboard</h2>
    <p class="text-muted">Manage library operations</p>

    <div class="row mt-4">
        <div class="col-md-3 mb-3">
            <div style="background:#4e73df; color:white; padding:20px; border-radius:10px;">
                <h4>Total Students</h4>
                <h2>@Model.TotalStudents</h2>
            </div>
        </div>
        <div class="col-md-3 mb-3">
            <div style="background:#1cc88a; color:white; padding: 20px; border-radius:10px;">
                <h4>Total Books</h4>
                <h2>@Model.TotalBooks</h2>
            </div>
        </div>
        <div class="col-md-3 mb-3">
            <div style="background:#36b9cc; color:white; padding:20px; border-radius:10px;">
                <h4>Active Borrowings</h4>
                <h2>@Model.TotalBorrowings</h2>
            </div>
        </div>
        <div class="col-md-3 mb-3">
            <div style="background:#e74a3b; color:white; padding:20px; border-radius:10px;">
                <h4>Overdue</h4>
                <h2>@Model.OverdueBorrowings</h2>
            </div>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h5>Library Management</h5>
                </div>
                <div class="card-body">
                    <a href="/LibrarianDashboard/PendingRequests" class="btn btn-warning m-1">
                        Pending Requests
                        @if (ViewBag.PendingRequests != null && (int)ViewBag.PendingRequests > 0)
                        {
                                <span class="badge bg-danger">@ViewBag.PendingRequests</span>
                        }
                    </a>
                    <a href="/LibrarianDashboard/ActiveBorrowings" class="btn btn-info m-1">Active Borrowings</a>
                    <a href="/Book" class="btn btn-success m-1">Manage Books</a>
                    <a href="/Student" class="btn btn-primary m-1">View Students</a>
                </div>
            </div>
        </div>
    </div>
</div>