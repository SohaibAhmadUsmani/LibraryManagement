@{
    ViewData["Title"] = "Librarian Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="dashboard-header d-flex align-items-center justify-content-between text-white p-4 mb-4 rounded shadow" 
     style="background: linear-gradient(to right, #163832, #235d51);">
    <div>
        <h1 class="fw-bold display-6">Librarian Workspace</h1>
        <p class="lead mb-0 opacity-75">Manage circulation and inventory.</p>
    </div>
    <img src="~/images/Librarian.jfif" class="rounded-circle border border-4 border-white shadow-sm" 
         style="width: 100px; height: 100px; object-fit: cover;" alt="Profile">
</div>

<div class="row mb-4">
    <div class="col-md-4">
        <div class="card h-100 border-0 shadow-sm p-3 text-center">
            <h6 class="text-muted fw-bold">ACTIVE LOANS</h6>
            <h2 class="display-5 fw-bold text-dark">@(ViewBag.IssuedBooks ?? 0)</h2>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card h-100 border-0 shadow-sm p-3 text-center">
            <h6 class="text-muted fw-bold">RETURNS DUE TODAY</h6>
            <h2 class="display-5 fw-bold text-warning">@(ViewBag.ReturnsDueToday ?? 0)</h2>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card h-100 border-0 shadow-sm p-3 text-center">
            <h6 class="text-muted fw-bold">OVERDUE</h6>
            <h2 class="display-5 fw-bold text-danger">@(ViewBag.OverdueBooks ?? 0)</h2>
        </div>
    </div>
</div>

<div class="card border-0 shadow-sm">
    <div class="card-header bg-transparent fw-bold text-muted border-0">QUICK ACTIONS</div>
    <div class="card-body">
        <div class="row g-3">

            <div class="col-md-4">
                <a asp-controller="LibrarianDashboard" asp-action="BookRequests" class="btn btn-light w-100 py-3 shadow-sm text-start border">
                    <i class="fas fa-hand-holding me-3"></i> Book Requests
                </a>
            </div>

            <div class="col-md-4">
                <a asp-controller="LibrarianDashboard" asp-action="ReturnBook" class="btn btn-light w-100 py-3 shadow-sm text-start border">
                    <i class="fas fa-undo me-3"></i> Process Return
                </a>
            </div>

            <div class="col-md-4">
                <a asp-controller="LibrarianDashboard" asp-action="Inventory" class="btn btn-light w-100 py-3 shadow-sm text-start border">
                    <i class="fas fa-search me-3"></i> View Inventory
                </a>
            </div>

            <div class="col-md-6 mt-3">
                <a asp-controller="LibrarianDashboard" asp-action="ActiveBorrowings" class="btn btn-outline-dark w-100 py-2">
                    Active Borrowings List
                </a>
            </div>

            <div class="col-md-6 mt-3">
                <a asp-controller="LibrarianDashboard" asp-action="StudentLookup" class="btn btn-outline-dark w-100 py-2">
                    Student Lookup
                </a>
            </div>

        </div>
    </div>
</div>