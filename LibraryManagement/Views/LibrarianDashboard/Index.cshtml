@model LibraryManagement.Models.LibrarianDashboardModel

@{
    ViewData["Title"] = "Librarian Dashboard";
}

@if (TempData["message"] != null)
{
        <div class="alert alert-success">
        @TempData["message"]
        </div>
}

<div class="container-fluid">
    <h2>Welcome, @Model.LibrarianName!</h2>
    <p class="text-muted">Librarian Dashboard - Manage library operations</p>

    <!-- Dashboard Cards -->
    <div class="row mt-4">
        <div class="col-md-3">
            <div class="card" style="background:#4e73df; color:white; border-radius:10px;">
                <div class="card-body text-center">
                    <i class="fas fa-users fa-2x mb-2"></i>
                    <h4>Total Students</h4>
                    <h3>@Model.TotalStudents</h3>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card" style="background:#1cc88a; color:white; border-radius:10px;">
                <div class="card-body text-center">
                    <i class="fas fa-book fa-2x mb-2"></i>
                    <h4>Total Books</h4>
                    <h3>@Model.TotalBooks</h3>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card" style="background:#36b9cc; color:white; border-radius:10px;">
                <div class="card-body text-center">
                    <i class="fas fa-exchange-alt fa-2x mb-2"></i>
                    <h4>Total Borrowings</h4>
                    <h3>@Model.TotalBorrowings</h3>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card" style="background:#e74a3b; color:white; border-radius:10px;">
                <div class="card-body text-center">
                    <i class="fas fa-exclamation-triangle fa-2x mb-2"></i>
                    <h4>Overdue</h4>
                    <h3>@Model.OverdueBorrowings</h3>
                </div>
            </div>
        </div>
    </div>

    <!-- Management Tools -->
    <div class="row mt-4">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h5><i class="fas fa-tools"></i> Library Management Tools</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-2">
                            <a href="/Student" class="btn btn-primary btn-lg w-100">
                                <i class="fas fa-user-graduate"></i><br>Manage Students
                            </a>
                        </div>
                        <div class="col-md-2">
                            <a href="/Book" class="btn btn-success btn-lg w-100">
                                <i class="fas fa-book"></i><br>Manage Books
                            </a>
                        </div>
                        <div class="col-md-2">
                            <a href="/Borrowing" class="btn btn-info btn-lg w-100">
                                <i class="fas fa-clipboard-list"></i><br>Borrowings
                            </a>
                        </div>
                        <div class="col-md-2">
                            <a href="/Librarian" class="btn btn-warning btn-lg w-100">
                                <i class="fas fa-user-tie"></i><br>Staff
                            </a>
                        </div>
                        <div class="col-md-2">
                            <a href="/LibrarianDashboard/Reports" class="btn btn-secondary btn-lg w-100">
                                <i class="fas fa-chart-bar"></i><br>Reports
                            </a>
                        </div>
                        <div class="col-md-2">
                            <a href="/Login/Logout" class="btn btn-danger btn-lg w-100">
                                <i class="fas fa-sign-out-alt"></i><br>Logout
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Recent Activity -->
    <div class="row mt-4">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h5><i class="fas fa-clock"></i> Recent Borrowing Activity</h5>
                </div>
                <div class="card-body">
                    @if (Model.RecentBorrowings.Any())
                    {
                            <div class="table-responsive">
                                <table class="table table-striped">
                                    <thead>
                                        <tr>
                                            <th>Student Name</th>
                                            <th>Book Name</th>
                                            <th>Borrow Date</th>
                                            <th>Return Date</th>
                                            <th>Status</th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                    @foreach (var borrowing in Model.RecentBorrowings)
                                    {
                                                <tr>
                                                    <td>@borrowing.StudentName</td>
                                                    <td>@borrowing.BookName</td>
                                                    <td>@borrowing.BorrowDate.ToString("MMM dd, yyyy")</td>
                                                    <td>@borrowing.ReturnedDate.ToString("MMM dd, yyyy")</td>
                                                    <td>
                                                @if (borrowing.ReturnedDate < DateTime.Now)
                                                {
                                                                <span class="badge badge-danger">Overdue</span>
                                                }
                                                else
                                                {
                                                                <span class="badge badge-success">Active</span>
                                                }
                                                    </td>
                                                    <td>
                                                        <a href="/Borrowing/Edit/@borrowing.BorrowingId" class="btn btn-sm btn-warning">Edit</a>
                                                    </td>
                                                </tr>
                                    }
                                    </tbody>
                                </table>
                            </div>
                    }
                    else
                    {
                            <p class="text-muted text-center">No recent borrowing activity.</p>
                    }
                </div>
            </div>
        </div>

        <!-- Quick Stats -->
        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    <h5><i class="fas fa-chart-pie"></i> Quick Statistics</h5>
                </div>
                <div class="card-body">
                    <div class="row text-center">
                        <div class="col-12 mb-3">
                            <div class="card bg-light">
                                <div class="card-body">
                                    <h5 class="text-primary">Books per Student</h5>
                                    <h4>@(Model.TotalStudents > 0 ? Math.Round((double)Model.TotalBooks / Model.TotalStudents, 1) : 0)</h4>
                                </div>
                            </div>
                        </div>
                        <div class="col-12 mb-3">
                            <div class="card bg-light">
                                <div class="card-body">
                                    <h5 class="text-success">Active Borrowings</h5>
                                    <h4>@Model.TotalBorrowings</h4>
                                </div>
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="card bg-light">
                                <div class="card-body">
                                    <h5 class="text-warning">Today's Activity</h5>
                                    <h4>@Model.RecentBorrowings.Count(b => b.BorrowDate.Date == DateTime.Now.Date)</h4>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Font Awesome for icons -->
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">

