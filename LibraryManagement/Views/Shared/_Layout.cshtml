@{
    var userRole = Context.Session.GetString("Role");
    var isLoggedIn = !string.IsNullOrEmpty(userRole);
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1. 0" />
    <title>@ViewData["Title"] - Library Management</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body class="d-flex flex-column min-vh-100">

    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">Library Management System</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">

                    @if (!isLoggedIn)
                    {
                            <li class="nav-item"><a class="nav-link" href="/Login">Login</a></li>
                    }
                    else if (userRole == "Admin")
                    {
                            <li class="nav-item"><a class="nav-link" href="/Dashboard">Dashboard</a></li>
                            <li class="nav-item"><a class="nav-link" href="/Admin/PendingApprovals">Pending Approvals</a></li>
                            <li class="nav-item"><a class="nav-link" href="/Admin/ManageUsers">Manage Users</a></li>
                            <li class="nav-item"><a class="nav-link" href="/Student">Students</a></li>
                            <li class="nav-item"><a class="nav-link" href="/Book">Books</a></li>
                            <li class="nav-item"><a class="nav-link" href="/Borrowing">Borrowings</a></li>
                            <li class="nav-item"><a class="nav-link" href="/Librarian">Librarians</a></li>
                            <li class="nav-item"><a class="nav-link text-danger" href="/Login/Logout">Logout</a></li>
                    }
                    else if (userRole == "Librarian")
                    {
        <li class="nav-item"><a class="nav-link" href="/LibrarianDashboard">Dashboard</a></li>
        <li class="nav-item"><a class="nav-link" href="/LibrarianDashboard/PendingRequests">Pending Requests</a></li>
        <li class="nav-item"><a class="nav-link" href="/LibrarianDashboard/ActiveBorrowings">Active Borrowings</a></li>
        <li class="nav-item"><a class="nav-link" href="/Book">Manage Books</a></li>
        <li class="nav-item"><a class="nav-link" href="/Student">View Students</a></li>
        <li class="nav-item"><a class="nav-link text-danger" href="/Login/Logout">Logout</a></li>
                    }
                    else if (userRole == "Student")
                    {
                            <li class="nav-item"><a class="nav-link" href="/StudentDashboard">Dashboard</a></li>
                            <li class="nav-item"><a class="nav-link" href="/StudentDashboard/SearchBooks">Search Books</a></li>
                            <li class="nav-item"><a class="nav-link" href="/StudentDashboard/MyBorrowings">My Borrowings</a></li>
                            <li class="nav-item"><a class="nav-link" href="/StudentDashboard/Profile">My Profile</a></li>
                            <li class="nav-item"><a class="nav-link text-danger" href="/Login/Logout">Logout</a></li>
                    }

                </ul>
            </div>
        </div>
    </nav>

    <main class="flex-grow-1">
        @RenderBody()
    </main>

    <footer class="bg-dark text-white text-center py-3 mt-auto">
        &copy; @DateTime.Now.Year - Library Management.  All rights reserved. 
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap. bundle.min.js"></script>

</body>
</html>