@model LibraryManagement.Models.DashboardModel
@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="container mt-4">

    <!-- Admin Dashboard Banner Image -->
    <div class="dashboard-banner mb-4">
        <img src="~/images/admin.jpg" alt="Admin Dashboard Banner"
             class="img-fluid rounded shadow" style="max-height:300px; object-fit:cover; width:100%;" />
    </div>

    <h2>Admin Dashboard</h2>
    <p class="text-muted">Welcome to the admin panel</p>

    <div class="row mt-4">
        <div class="col-md-2 mb-3">
            <div style="background:#4e73df; color: white; padding:15px; border-radius:10px; text-align:center;">
                <h6>Total Students</h6>
                <h2>@Model.TotalStudents</h2>
            </div>
        </div>

        <div class="col-md-2 mb-3">
            <div style="background:#1cc88a; color:white; padding:15px; border-radius:10px; text-align:center;">
                <h6>Total Books</h6>
                <h2>@Model.TotalBooks</h2>
            </div>
        </div>

        <div class="col-md-2 mb-3">
            <div style="background:#36b9cc; color:white; padding:15px; border-radius:10px; text-align: center;">
                <h6>Librarians</h6>
                <h2>@Model.TotalLibrarians</h2>
            </div>
        </div>

        <div class="col-md-2 mb-3">
            <div style="background:#f6c23e; color:white; padding: 15px; border-radius:10px; text-align:center;">
                <h6>Active Borrowings</h6>
                <h2>@Model.TotalBorrowings</h2>
            </div>
        </div>

        <div class="col-md-2 mb-3">
            <div style="background:#e74a3b; color: white; padding:15px; border-radius:10px; text-align:center;">
                <h6>Overdue</h6>
                <h2>@Model.OverdueBorrowings</h2>
            </div>
        </div>

        <div class="col-md-2 mb-3">
            <div style="background:#858796; color:white; padding:15px; border-radius:10px; text-align:center;">
                <h6>Pending Approvals</h6>
                <h2>@Model.PendingApprovals</h2>
            </div>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h5>Quick Actions</h5>
                </div>
                <div class="card-body">
                    <a href="/Admin/PendingApprovals" class="btn btn-warning m-1">Pending Approvals</a>
                    <a href="/Admin/ManageUsers" class="btn btn-info m-1">Manage Users</a>
                    <a href="/Student" class="btn btn-primary m-1">Manage Students</a>
                    <a href="/Book" class="btn btn-success m-1">Manage Books</a>
                    <a href="/Librarian" class="btn btn-dark m-1">Manage Librarians</a>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5>Active Borrowings</h5>
                    <span class="badge bg-primary">@Model.TotalBorrowings total</span>
                </div>
                <div class="card-body">
                    @if (Model.ActiveBorrowings != null && Model.ActiveBorrowings.Count > 0)
                    {
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>Student Name</th>
                                        <th>Book Name</th>
                                        <th>Request Date</th>
                                        <th>Approved Date</th>
                                        <th>Due Date</th>
                                        <th>Status</th>
                                    </tr>
                                </thead>
                                <tbody>
                                @foreach (var item in Model.ActiveBorrowings)
                                {
                                            <tr>
                                                <td>@item.RequestId</td>
                                                <td>@item.StudentName</td>
                                                <td>@item.BookName</td>
                                                <td>@item.RequestDate.ToString("MMM dd, yyyy")</td>
                                                <td>
                                            @if (item.ApprovedDate.HasValue)
                                            {
                                                @item.ApprovedDate.Value.ToString("MMM dd, yyyy")
                                            }
                                            else
                                            {
                                                            <span class="text-muted">-</span>
                                            }
                                                </td>
                                                <td>
                                            @if (item.DueDate.HasValue)
                                            {
                                                @item.DueDate.Value.ToString("MMM dd, yyyy")
                                            }
                                            else
                                            {
                                                            <span class="text-muted">-</span>
                                            }
                                                </td>
                                                <td>
                                            @if (item.DueDate.HasValue && item.DueDate.Value < DateTime.Now)
                                            {
                                                            <span class="badge bg-danger">Overdue</span>
                                            }
                                            else
                                            {
                                                            <span class="badge bg-success">Active</span>
                                            }
                                                </td>
                                            </tr>
                                }
                                </tbody>
                            </table>
                    }
                    else
                    {
                            <p class="text-muted text-center">No active borrowings. </p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>