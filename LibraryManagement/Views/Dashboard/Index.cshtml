@model LibraryManagement.Models.DashboardModel

@{
    ViewData["Title"] = "Dashboard";
}

@if (TempData["message"] != null)
{
    <div class="alert alert-success">
        @TempData["message"]
    </div>
}


<h2>Admin Dashboard</h2>

<div style="display:flex; gap:20px; margin-top:20px;">
    <div style="background:#4e73df; color:white; padding:20px; border-radius:10px; width:200px;">
        <h4>Total Students</h4>
        <p>@Model.TotalStudents</p>
    </div>

    <div style="background:#1cc88a; color:white; padding:20px; border-radius:10px; width:200px;">
        <h4>Total Books</h4>
        <p>@Model.TotalBooks</p>
    </div>

    <div style="background:#36b9cc; color:white; padding:20px; border-radius:10px; width:200px;">
        <h4>Total Librarians</h4>
        <p>@Model.TotalLibrarians</p>
    </div>

    <div style="background:#f6c23e; color:white; padding:20px; border-radius:10px; width:200px;">
        <h4>Total Borrowings</h4>
        <p>@Model.TotalBorrowings</p>
    </div>
</div>


