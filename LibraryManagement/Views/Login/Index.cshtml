@model LibraryManagement.Models.LoginModel

@{
    Layout = null;
}

<! DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap. min.css" rel="stylesheet">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery. min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap. min.js"></script>
    <style>
        body {
            margin: 0;
            padding: 0;
            background-color: #C9A88C;
            height: 100vh;
        }

        .login-box {
            margin-top: 120px;
            max-width: 450px;
            border: 1px solid #9C9C9C;
            background-color: #EAEAEA;
            padding: 30px;
            border-radius: 5px;
        }
    </style>
</head>
<body>

    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="login-box">

                    @if (TempData["Success"] != null)
                    {
                            <div class="alert alert-success">@TempData["Success"]</div>
                    }

                    @if (TempData["message"] != null)
                    {
                            <div class="alert alert-info">@TempData["message"]</div>
                    }

                    <h3 class="text-center text-info">Library Management Login</h3>

                    <form asp-controller="Login" asp-action="Verify" method="post">

                        <div class="form-group">
                            <label class="text-info">Username:</label>
                            <input asp-for="username" class="form-control" placeholder="Username" required />
                            <span asp-validation-for="username" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label class="text-info">Password:</label>
                            <input asp-for="password" type="password" class="form-control" placeholder="Password" required />
                            <span asp-validation-for="password" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <button type="submit" class="btn btn-info btn-md w-100">Login</button>
                        </div>
                    </form>

                    @if (ViewBag.message != null)
                    {
                            <div class="alert alert-danger">@ViewBag.message</div>
                    }

                    <hr>

                    <div class="text-center">
                        <p class="text-info">Don't have an account? </p>
                        <a href="/Register" class="btn btn-primary w-100">Click here to Register</a>
                    </div>

                </div>
            </div>
        </div>
    </div>

</body>
</html>