@model LibraryManagement.Models.LoginModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1"/>
    <title>Login</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css">
    <style>
        .login-background {
            min-height: 100vh;
            width: 100vw;
            position: fixed;
            top: 0; left: 0;
            z-index: 0;
            background: url('/images/login.jpg') no-repeat center center/cover;
        }
        .overlay {
            position: absolute;
            top:0; left:0; right:0; bottom:0;
            background: rgba(0,0,0,0.50);
            z-index: 1;
        }
        .center-form-container {
            min-height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
            position: relative;
            z-index: 2;
        }
        .form-card {
            background: rgba(255,255,255,0.95);
            padding: 2.5rem 2.9rem;
            border-radius: 1rem;
            box-shadow:0 4px 24px rgba(0,0,0,0.13);
            transition: transform 0.2s cubic-bezier(.4,2,.6,1.1), box-shadow 0.2s;
            will-change: transform, box-shadow;
        }
        .form-card:hover, .form-card:focus-within {
            transform: scale(1.045);
            box-shadow:0 11px 32px rgba(0,0,0,0.18);
        }
    </style>
</head>
<body>
<div class="login-background">
    <div class="overlay"></div>
    <div class="center-form-container">
        <div class="form-card">

                @if (TempData["Success"] != null)
                {
                    <div class="alert alert-success">@TempData["Success"]</div>
                }

                @if (TempData["message"] != null)
                {
                    <div class="alert alert-info">@TempData["message"]</div>
                }

            <h3 class="text-center text-info mb-4">Library Management Login</h3>

            <form asp-controller="Login" asp-action="Verify" method="post">
                <div class="form-group">
                    <label asp-for="username" class="text-info"></label>
                    <input asp-for="username" class="form-control" placeholder="Username" required />
                    <span asp-validation-for="username" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="password" class="text-info"></label>
                    <input asp-for="password" type="password" class="form-control" placeholder="Password" required />
                    <span asp-validation-for="password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-info btn-md w-100">Login</button>
                </div>
            </form>
                @if (ViewBag.message != null)
                {
                    <div class="alert alert-danger">@ViewBag.message</div>
                }

            <hr>
            <div class="text-center">
                <p class="text-info">Don't have an account?</p>
                <a href="/Register" class="btn btn-primary w-100">Click here to Register</a>
            </div>
        </div>
    </div>
</div>
<partial name="_ValidationScriptsPartial" />
</body>
</html>