@using LibraryManagement.Models.Entities
@model BookModel
@{
    ViewData["Title"] = "Edit Book";
}

<div class="container mt-4">
    <h2>Edit Book</h2>

    @if (ViewBag.Error != null)
    {
            <div class="alert alert-danger">@ViewBag.Error</div>
    }

    <div class="card" style="max-width:  600px;">
        <div class="card-body">
            <form method="post" action="/Book/Edit">
                <input type="hidden" name="BookId" value="@Model.BookId">

                <div class="mb-3">
                    <label class="form-label">Book Name</label>
                    <input type="text" name="BookName" class="form-control" value="@Model.BookName" required>
                </div>

                <div class="mb-3">
                    <label class="form-label">Author</label>
                    <input type="text" name="Author" class="form-control" value="@Model.Author">
                </div>

                <div class="mb-3">
                    <label class="form-label">Publisher</label>
                    <input type="text" name="Publisher" class="form-control" value="@Model.Publisher">
                </div>

                <div class="mb-3">
                    <label class="form-label">Quantity</label>
                    <input type="number" name="Quantity" class="form-control" value="@Model.Quantity" min="0">
                </div>

                <button type="submit" class="btn btn-primary">Update Book</button>
                <a href="/Book" class="btn btn-secondary">Cancel</a>
            </form>
        </div>
    </div>
</div>