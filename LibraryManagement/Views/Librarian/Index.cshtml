@model List<LibraryManagement.Models.LibrarianModel>
@{
    ViewData["Title"] = "Librarians";
}

<div class="container mt-4">
    <h2>Manage Librarians</h2>

    @if (TempData["Success"] != null)
    {
            <div class="alert alert-success">@TempData["Success"]</div>
    }

    <a href="/Librarian/Create" class="btn btn-primary mb-3">Add New Librarian</a>

    <div class="card">
        <div class="card-body">
            @if (Model != null && Model.Count > 0)
            {
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Name</th>
                                <th>Age</th>
                                <th>Phone</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                        @foreach (var item in Model)
                        {
                                    <tr>
                                        <td>@item.LibrarianId</td>
                                        <td>@item.Name</td>
                                        <td>@item.Age</td>
                                        <td>@item.Phone</td>
                                        <td>
                                            <a href="/Librarian/Edit/@item. LibrarianId" class="btn btn-sm btn-warning">Edit</a>
                                            <a href="/Librarian/Delete/@item.LibrarianId" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure? ')">Delete</a>
                                        </td>
                                    </tr>
                        }
                        </tbody>
                    </table>
            }
            else
            {
                    <p class="text-muted text-center">No librarians found.</p>
            }
        </div>
    </div>
</div>