@model LibraryManagement.Models.User

@{
    ViewData["Title"] = "My Profile";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">

            <div class="card border-0 shadow-lg rounded-3 overflow-hidden">

                <div class="card-header text-white text-center py-5" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
                    <h4 class="mb-0 fw-bold">Student Profile</h4>
                </div>

                <div class="card-body p-5 text-center relative">

                    <div style="margin-top: -80px; margin-bottom: 20px;">
                        <img src="https://ui-avatars.com/api/?name=@Model.Name&background=fff&color=764ba2&size=128&bold=true&length=2" 
                             alt="Profile" 
                             class="rounded-circle img-thumbnail shadow-lg" 
                             style="width: 130px; height: 130px; border: 4px solid white;">
                    </div>

                    <h2 class="fw-bold text-dark mb-1">@Model.Name</h2>
                    <span class="badge bg-primary bg-opacity-10 text-primary px-3 py-2 rounded-pill mb-4">@Model.Role</span>

                    <div class="card bg-light border-0 rounded-3 text-start p-3 mb-4">
                        <div class="d-flex justify-content-between border-bottom pb-2 mb-2">
                            <span class="text-muted"><i class="fas fa-id-card me-2"></i>Username</span>
                            <span class="fw-bold text-dark">@Model.Username</span>
                        </div>
                        <div class="d-flex justify-content-between border-bottom pb-2 mb-2">
                            <span class="text-muted"><i class="fas fa-envelope me-2"></i>Email</span>
                            <span class="fw-bold text-dark">@Model.Email</span>
                        </div>
                        <div class="d-flex justify-content-between">
                            <span class="text-muted"><i class="fas fa-check-circle me-2"></i>Status</span>
                            <span class="text-success fw-bold">Active Member</span>
                        </div>
                    </div>

                    <a asp-action="Index" class="btn btn-outline-dark px-4 rounded-pill">
                        <i class="fas fa-arrow-left me-2"></i> Back to Dashboard
                    </a>
                </div>
            </div>

        </div>
    </div>
</div>