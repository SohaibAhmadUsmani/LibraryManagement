@model LibraryManagement.Models.StudentModel
@{
    ViewData["Title"] = "Add New Student";
}

<div class="container mt-4">
    <h2>Add New Student</h2>
    
    @if(ViewBag.Error != null)
    {
        <div class="alert alert-danger">@ViewBag.Error</div>
    }
    
    <div class="card" style="max-width: 600px;">
        <div class="card-body">
            <form method="post" action="/Student/Create">
                <div class="mb-3">
                    <label class="form-label">Full Name</label>
                    <input type="text" name="StudentName" class="form-control" placeholder="Enter student name" required>
                </div>
                
                <div class="mb-3">
                    <label class="form-label">Email</label>
                    <input type="email" name="Email" class="form-control" placeholder="Enter email" required>
                </div>
                
                <div class="mb-3">
                    <label class="form-label">Phone</label>
                    <input type="text" name="Phone" class="form-control" placeholder="Enter phone number">
                </div>
                
                <hr>
                <h5>Login Credentials</h5>
                
                <div class="mb-3">
                    <label class="form-label">Username</label>
                    <input type="text" name="Username" class="form-control" placeholder="Leave empty to auto generate">
                    <small class="text-muted">If empty, username will be generated from email</small>
                </div>
                
                <div class="mb-3">
                    <label class="form-label">Password</label>
                    <input type="text" name="Password" class="form-control" placeholder="Leave empty for default 123456">
                    <small class="text-muted">Default password is 123456</small>
                </div>
                
                <button type="submit" class="btn btn-primary">Create Student</button>
                <a href="/Student" class="btn btn-secondary">Cancel</a>
            </form>
        </div>
    </div>
</div>