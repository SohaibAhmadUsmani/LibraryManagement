@model LibraryManagement.Models.StudentDashboardModel
@{
    ViewData["Title"] = "Student Dashboard";
}

<div class="container mt-4">
    <!-- Student Dashboard Banner Image -->
    <div class="dashboard-banner mb-4">
        <img src="~/images/student.jpg" alt="Student Dashboard Banner"
             class="img-fluid rounded shadow" style="max-height:300px; object-fit:cover; width:100%;" />
    </div>

    <h2>Welcome, @Model.StudentName!</h2>
    <p class="text-muted">Student Dashboard</p>

    <div class="row mt-4">
        <div class="col-md-3 mb-3">
            <div style="background:#4e73df; color: white; padding:20px; border-radius:10px; text-align:center;">
                <h5>My Borrowed Books</h5>
                <h1>@Model.MyBorrowedBooks</h1>
            </div>
        </div>
        <div class="col-md-3 mb-3">
            <div style="background:#e74a3b; color: white; padding:20px; border-radius:10px; text-align:center;">
                <h5>Overdue Books</h5>
                <h1>@Model.OverdueBooks</h1>
            </div>
        </div>
        <div class="col-md-3 mb-3">
            <div style="background:#1cc88a; color:white; padding:20px; border-radius:10px; text-align:center;">
                <h5>Available Books</h5>
                <h1>@Model.AvailableBooks</h1>
            </div>
        </div>
        <div class="col-md-3 mb-3">
            <div style="background:#f6c23e; color:white; padding:20px; border-radius:10px; text-align:center;">
                <h5>Pending Requests</h5>
                <h1>@Model.PendingRequests</h1>
            </div>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h5>Quick Actions</h5>
                </div>
                <div class="card-body">
                    <a href="/StudentDashboard/SearchBooks" class="btn btn-primary m-1">Search and Borrow Books</a>
                    <a href="/StudentDashboard/MyBorrowings" class="btn btn-info m-1">My Borrowings</a>
                    <a href="/StudentDashboard/Profile" class="btn btn-success m-1">My Profile</a>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h5>My Current Requests</h5>
                </div>
                <div class="card-body">
                    @if (Model.MyRequests != null && Model.MyRequests.Count > 0)
                    {
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>Book Name</th>
                                        <th>Request Date</th>
                                        <th>Status</th>
                                        <th>Due Date</th>
                                    </tr>
                                </thead>
                                <tbody>
                                @foreach (var item in Model.MyRequests)
                                {
                                            <tr>
                                                <td>@item.BookName</td>
                                                <td>@item.RequestDate.ToString("MMM dd, yyyy")</td>
                                                <td>
                                            @if (item.Status == "Pending")
                                            {
                                                            <span class="badge bg-warning text-dark">Pending</span>
                                            }
                                            else if (item.Status == "Approved")
                                            {
                                                            <span class="badge bg-success">Borrowed</span>
                                            }
                                                </td>
                                                <td>
                                            @if (item.DueDate.HasValue)
                                            {
                                                @item.DueDate.Value.ToString("MMM dd, yyyy")
                                            }
                                            else
                                            {
                                                            <span class="text-muted">Pending approval</span>
                                            }
                                                </td>
                                            </tr>
                                }
                                </tbody>
                            </table>
                    }
                    else
                    {
                            <p class="text-muted text-center">No current requests.</p>
                            <div class="text-center">
                                <a href="/StudentDashboard/SearchBooks" class="btn btn-primary">Browse Books</a>
                            </div>
                    }
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    <h5>New Arrivals</h5>
                </div>
                <div class="card-body">
                    @if (Model.RecentBooks != null && Model.RecentBooks.Count > 0)
                    {
                        @foreach (var book in Model.RecentBooks)
                        {
                                    <div class="mb-2 pb-2 border-bottom">
                                        <strong>@book.BookName</strong><br>
                                        <small class="text-muted">by @book.Author</small><br>
                                        <small class="text-success">@book.Quantity available</small>
                                    </div>
                        }
                    }
                    else
                    {
                            <p class="text-muted">No books available. </p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>