@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor
@{
    ViewData["Title"] = "Student Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
    string name = HttpContextAccessor.HttpContext.Session.GetString("Name");
}

<div class="container-fluid pb-5">
    <div class="row">
        <div class="col-md-3 mb-4">
            <div class="glass-card p-3 h-100">
                <h5 class="fw-bold px-3 mb-4" style="color: #163832; border-bottom: 2px solid #163832; padding-bottom:10px;">MY LIBRARY</h5>
                <a asp-action="Index" class="sidebar-link active"><i class="fas fa-home me-2"></i> Overview</a>
                <a asp-action="MyLoans" class="sidebar-link"><i class="fas fa-book-reader me-2"></i> My Loans</a>
                <a href="#" class="sidebar-link"><i class="fas fa-history me-2"></i> History</a>
                <a href="#" class="sidebar-link text-danger"><i class="fas fa-exclamation-circle me-2"></i> Pay Fines</a>
            </div>
        </div>

        <div class="col-md-9">
            <div class="banner-container">
                <img src="~/images/Student.jfif" alt="Student Banner">
                <div class="banner-text">
                    <h1 class="display-5 fw-bold">Hello, @name</h1>
                    <p class="mb-0">Welcome back to your reading portal.</p>
                </div>
            </div>

            <div class="row g-3 mb-4">
                <div class="col-md-4">
                    <div class="glass-card p-4 text-center">
                        <i class="fas fa-book-open fa-2x text-success mb-2"></i>
                        <h2 class="fw-bold">@ViewBag.BorrowedCount</h2>
                        <small class="text-muted">Active Loans</small>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="glass-card p-4 text-center">
                        <i class="fas fa-check-circle fa-2x text-primary mb-2"></i>
                        <h2 class="fw-bold">@ViewBag.HistoryCount</h2>
                        <small class="text-muted">Books Read</small>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="glass-card p-4 text-center">
                        <i class="fas fa-wallet fa-2x text-danger mb-2"></i>
                        <h2 class="fw-bold">$@ViewBag.MyFines</h2>
                        <small class="text-muted">My Fines</small>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="glass-card p-4 text-center">
                        <i class="fas fa-hourglass-half fa-2x text-warning mb-2"></i>
                        <h2 class="fw-bold">@ViewBag.DueSoon</h2>
                        <small class="text-muted">Due in 3 Days</small>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="glass-card p-4 text-center">
                        <i class="fas fa-times-circle fa-2x text-secondary mb-2"></i>
                        <h2 class="fw-bold">@ViewBag.LostBooks</h2>
                        <small class="text-muted">Lost Books</small>
                    </div>
                </div>
            </div>

            <div class="glass-card p-4">
                <h4 class="fw-bold mb-3" style="color: #163832;">Announcements</h4>
                @if (ViewBag.Announcements != null)
                {
                    foreach (var item in ViewBag.Announcements)
                    {
                                <div class="alert alert-light border shadow-sm mb-2">
                                    <strong class="text-success">@item.Title</strong>
                                    <p class="mb-0 text-muted">@item.Content</p>
                                </div>
                    }
                }
            </div>
        </div>
    </div>
</div>