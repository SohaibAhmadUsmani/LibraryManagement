@model LibraryManagement.Models.StudentDashboardModel

@{
    ViewData["Title"] = "Student Dashboard";
}

@if (TempData["message"] != null)
{
        <div class="alert alert-success">
        @TempData["message"]
        </div>
}

<div class="container-fluid">
    <h2>Welcome, @Model.StudentName!</h2>
    <p class="text-muted">Student Dashboard - Manage your library activities</p>

    <!-- Dashboard Cards -->
    <div class="row mt-4">
        <div class="col-md-3">
            <div class="card" style="background:#4e73df; color:white; border-radius:10px;">
                <div class="card-body text-center">
                    <i class="fas fa-book fa-2x mb-2"></i>
                    <h4>My Borrowed Books</h4>
                    <h3>@Model.MyBorrowedBooks</h3>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card" style="background:#1cc88a; color:white; border-radius:10px;">
                <div class="card-body text-center">
                    <i class="fas fa-exclamation-triangle fa-2x mb-2"></i>
                    <h4>Overdue Books</h4>
                    <h3>@Model.OverdueBooks</h3>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card" style="background:#36b9cc; color:white; border-radius:10px;">
                <div class="card-body text-center">
                    <i class="fas fa-library fa-2x mb-2"></i>
                    <h4>Available Books</h4>
                    <h3>@Model.AvailableBooks</h3>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card" style="background:#f6c23e; color:white; border-radius:10px;">
                <div class="card-body text-center">
                    <i class="fas fa-calendar fa-2x mb-2"></i>
                    <h4>Due This Week</h4>
                    <h3>0</h3>
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Actions -->
    <div class="row mt-4">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h5><i class="fas fa-bolt"></i> Quick Actions</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-3">
                            <a href="/Book" class="btn btn-primary btn-lg w-100">
                                <i class="fas fa-search"></i><br>Browse Books
                            </a>
                        </div>
                        <div class="col-md-3">
                            <a href="/StudentDashboard/MyBorrowings" class="btn btn-info btn-lg w-100">
                                <i class="fas fa-list"></i><br>My Borrowings
                            </a>
                        </div>
                        <div class="col-md-3">
                            <a href="/StudentDashboard/Profile" class="btn btn-success btn-lg w-100">
                                <i class="fas fa-user"></i><br>My Profile
                            </a>
                        </div>
                        <div class="col-md-3">
                            <a href="/Login/Logout" class="btn btn-danger btn-lg w-100">
                                <i class="fas fa-sign-out-alt"></i><br>Logout
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- My Current Borrowings -->
    <div class="row mt-4">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h5><i class="fas fa-book-open"></i> My Current Borrowings</h5>
                </div>
                <div class="card-body">
                    @if (Model.MyCurrentBorrowings.Any())
                    {
                            <div class="table-responsive">
                                <table class="table table-striped">
                                    <thead>
                                        <tr>
                                            <th>Book Name</th>
                                            <th>Borrow Date</th>
                                            <th>Return Date</th>
                                            <th>Status</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                    @foreach (var borrowing in Model.MyCurrentBorrowings)
                                    {
                                                <tr>
                                                    <td>@borrowing.BookName</td>
                                                    <td>@borrowing.BorrowDate.ToString("MMM dd, yyyy")</td>
                                                    <td>@borrowing.ReturnedDate.ToString("MMM dd, yyyy")</td>
                                                    <td>
                                                @if (borrowing.ReturnedDate < DateTime.Now)
                                                {
                                                                <span class="badge badge-danger">Overdue</span>
                                                }
                                                else
                                                {
                                                                <span class="badge badge-success">Active</span>
                                                }
                                                    </td>
                                                </tr>
                                    }
                                    </tbody>
                                </table>
                            </div>
                    }
                    else
                    {
                            <p class="text-muted text-center">No current borrowings found.</p>
                            <div class="text-center">
                                <a href="/Book" class="btn btn-primary">Browse Books to Borrow</a>
                            </div>
                    }
                </div>
            </div>
        </div>

        <!-- Recently Added Books -->
        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    <h5><i class="fas fa-star"></i> Recently Added Books</h5>
                </div>
                <div class="card-body">
                    @if (Model.RecentBooks.Any())
                    {
                        @foreach (var book in Model.RecentBooks)
                        {
                                    <div class="media mb-3">
                                        <div class="media-body">
                                            <h6 class="mt-0">@book.BookName</h6>
                                            <small class="text-muted">by @book.Author</small><br>
                                            <small class="text-info">Available: @book.Quantity copies</small>
                                        </div>
                                    </div>
                                    <hr>
                        }
                    }
                    else
                    {
                            <p class="text-muted">No recent books found.</p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Font Awesome for icons -->
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">

