@model List<Book>
@{
    ViewData["Title"] = "Search Books";
}

<div class="container mt-4">
    <h2>Search Books</h2>

    @if (TempData["Success"] != null)
    {
            <div class="alert alert-success">@TempData["Success"]</div>
    }
    @if (TempData["Error"] != null)
    {
            <div class="alert alert-danger">@TempData["Error"]</div>
    }

    <form method="get" class="mb-4">
        <div class="input-group">
            <input type="text" name="searchTerm" class="form-control" placeholder="Search by book name or author..." value="@ViewBag.SearchTerm">
            <button type="submit" class="btn btn-primary">Search</button>
        </div>
    </form>

    <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h5>Available Books</h5>
            <span class="badge bg-primary">@Model.Count books found</span>
        </div>
        <div class="card-body">
            @if (Model != null && Model.Count > 0)
            {
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Book Name</th>
                                <th>Author</th>
                                <th>Available Copies</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                        @foreach (var book in Model)
                        {
                                    <tr>
                                        <td>@book.BookName</td>
                                        <td>@book.Author</td>
                                        <td>
                                    @if (book.Quantity > 0)
                                    {
                                                    <span class="badge bg-success">@book.Quantity available</span>
                                    }
                                    else
                                    {
                                                    <span class="badge bg-danger">Not available</span>
                                    }
                                        </td>
                                        <td>
                                    @if (book.Quantity > 0)
                                    {
                                                    <form method="post" action="/StudentDashboard/RequestBook" style="display: inline;">
                                                        <input type="hidden" name="bookId" value="@book.BookId">
                                                        <button type="submit" class="btn btn-sm btn-primary">Request to Borrow</button>
                                                    </form>
                                    }
                                    else
                                    {
                                                    <button class="btn btn-sm btn-secondary" disabled>Not Available</button>
                                    }
                                        </td>
                                    </tr>
                        }
                        </tbody>
                    </table>
            }
            else
            {
                    <p class="text-muted text-center">No books found.</p>
            }
        </div>
    </div>

    <a href="/StudentDashboard" class="btn btn-secondary mt-3">Back to Dashboard</a>
</div>