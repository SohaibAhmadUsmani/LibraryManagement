@model LibraryManagement.Models.User

@{

    ViewData["Title"] = "Register";

    Layout = "~/Views/Shared/_Layout.cshtml";

}



<div class="container d-flex align-items-center justify-content-center my-4">

    <div class="image-bg-card col-md-8" style="background-image: url('/images/Register.jfif');">



        <div class="image-overlay">

            <div class="w-100 text-white p-3">

                <h2 class="fw-bold text-center mb-4">Join Our Library</h2>



                <form asp-action="Signup" method="post">

                    <div class="row">

                        <div class="col-md-6 mb-3">

                            <label class="form-label fw-bold">Full Name</label>

                            <input asp-for="Name" class="form-control" placeholder="John Doe" required />

                        </div>

                        <div class="col-md-6 mb-3">

                            <label class="form-label fw-bold">Username</label>

                            <input asp-for="Username" class="form-control" placeholder="jdoe" required />

                        </div>

                    </div>



                    <div class="mb-3">

                        <label class="form-label fw-bold">Email</label>

                        <input asp-for="Email" type="email" class="form-control" placeholder="name@email.com" required />

                    </div>



                    <div class="row">

                        <div class="col-md-6 mb-3">

                            <label class="form-label fw-bold">Phone</label>

                            <input asp-for="Phone" class="form-control" placeholder="+123..." />

                        </div>

                        <div class="col-md-6 mb-3">

                            <label class="form-label fw-bold">Password</label>

                            <input asp-for="Password" type="password" class="form-control" required />

                        </div>

                    </div>



                    <button type="submit" class="btn btn-light w-100 py-3 mt-3 fw-bold" style="color: var(--theme-dark);">REGISTER</button>

                </form>



                <div class="text-center mt-3">

                    <a asp-action="Login" class="text-white small">Already have an account? Login.</a>

                </div>

            </div>

        </div>

    </div>

</div>