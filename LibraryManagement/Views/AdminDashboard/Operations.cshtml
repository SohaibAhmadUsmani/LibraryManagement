@{
    ViewData["Title"] = "Operations & Policies";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <h2 class="fw-bold mb-4 text-dark"><i class="fas fa-cogs me-2"></i>Library Operations</h2>

    @if (TempData["Message"] != null)
    {
            <div class="alert alert-success">@TempData["Message"]</div>
    }

    <div class="row">
        <div class="col-md-6">
            <div class="card shadow-sm border-0 mb-4">
                <div class="card-header bg-dark text-white">
                    <h5 class="mb-0">Policy Settings</h5>
                </div>
                <div class="card-body">
                    <form asp-action="UpdatePolicies" method="post">
                        <div class="mb-3">
                            <label class="form-label fw-bold">Max Books per Student</label>
                            <input type="number" name="maxBooks" class="form-control" value="3">
                        </div>
                        <div class="mb-3">
                            <label class="form-label fw-bold">Loan Duration (Days)</label>
                            <input type="number" name="duration" class="form-control" value="14">
                        </div>
                        <div class="mb-3">
                            <label class="form-label fw-bold">Fine Amount ($ / Day)</label>
                            <input type="number" name="fineAmount" class="form-control" value="10">
                        </div>
                        <button type="submit" class="btn btn-primary w-100">Update Policies</button>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card shadow-sm border-0 mb-4">
                <div class="card-header bg-danger text-white">
                    <h5 class="mb-0">System Alerts</h5>
                </div>
                <div class="card-body">
                    <form asp-action="SendAlert" method="post">
                        <div class="mb-3">
                            <label class="form-label fw-bold">Alert Type</label>
                            <select name="type" class="form-select">
                                <option value="Email">Email Notification</option>
                                <option value="SMS">SMS Alert</option>
                                <option value="Dashboard">Dashboard Popup</option>
                            </select>
                        </div>
                        <div class="mb-3">
                            <label class="form-label fw-bold">Message</label>
                            <textarea name="message" class="form-control" rows="4" placeholder="e.g., Library will be closed tomorrow..."></textarea>
                        </div>
                        <button type="submit" class="btn btn-danger w-100">Broadcast Alert</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>