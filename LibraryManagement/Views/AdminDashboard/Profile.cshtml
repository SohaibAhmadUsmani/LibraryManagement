@model LibraryManagement.Models.User
@{
    ViewData["Title"] = "Admin Profile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="card shadow border-0" style="max-width: 600px; margin: auto;">
        <div class="card-header bg-primary text-white text-center py-4">
            <i class="fas fa-user-shield fa-4x mb-2"></i>
            <h3>Admin Profile</h3>
        </div>
        <div class="card-body p-4">
            <div class="mb-3">
                <label class="text-muted small fw-bold">FULL NAME</label>
                <h5 class="fw-bold">@Model.Name</h5>
            </div>
            <div class="mb-3">
                <label class="text-muted small fw-bold">EMAIL ADDRESS</label>
                <h5 class="fw-bold">@Model.Email</h5>
            </div>
            <div class="mb-3">
                <label class="text-muted small fw-bold">ROLE</label>
                <span class="badge bg-success px-3 py-2">Administrator</span>
            </div>
             <div class="mb-3">
                <label class="text-muted small fw-bold">PHONE</label>
                <h5 class="fw-bold">@Model.Phone</h5>
            </div>

            <hr />
            <div class="d-flex justify-content-between">
                <a asp-action="EditUser" asp-route-id="@Model.UserId" class="btn btn-outline-primary">Edit Details</a>
                <a asp-controller="Account" asp-action="Logout" class="btn btn-danger">Sign Out</a>
            </div>
        </div>
    </div>
</div>