@model IEnumerable<LibraryManagement.Models.Borrowing>

<h2 class="mb-4">Issue & Return Desk</h2>

@if (TempData["Error"] != null)
{
     <div class="alert alert-danger">@TempData["Error"]</div>
}
@if (TempData["Success"] != null)
{
     <div class="alert alert-success">@TempData["Success"]</div>
}

<div class="card mb-4 shadow-sm border-primary">
    <div class="card-header bg-primary text-white">
        <i class="fas fa-hand-holding-book me-2"></i> Quick Issue (Admin Override)
    </div>
    <div class="card-body">
        <form asp-action="QuickIssue" method="post" class="row g-3">
            <div class="col-md-5">
                <input type="text" name="username" class="form-control" placeholder="Enter Student Username" required>
            </div>
            <div class="col-md-5">
                <input type="text" name="bookTitle" class="form-control" placeholder="Enter Exact Book Title" required>
            </div>
            <div class="col-md-2">
                <button type="submit" class="btn btn-success w-100">Issue Book</button>
            </div>
        </form>
    </div>
</div>

<div class="card shadow-sm">
    <div class="card-header bg-white">
        <h5 class="mb-0"> Currently Issued Books</h5>
    </div>
    <div class="card-body p-0">
        <table class="table table-hover mb-0">
            <thead class="table-light">
                <tr>
                    <th>Student</th>
                    <th>Book</th>
                    <th>Issue Date</th>
                    <th>Due Date</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                        <tr>
                            <td>@item.StudentName</td>
                            <td>@item.BookName</td>
                            <td>@item.RequestDate.ToShortDateString()</td>
                            <td>
                            @if (item.DueDate < DateTime.Now)
                            {
                                        <span class="text-danger fw-bold">@item.DueDate?.ToShortDateString() (Overdue)</span>
                            }
                            else
                            {
                                        <span>@item.DueDate?.ToShortDateString()</span>
                            }
                            </td>
                            <td>
                                    <a asp-action="MarkReturned" asp-route-id="@item.RequestId" class="btn btn-sm btn-outline-primary">
                                    <i class="fas fa-undo me-1"></i> Return
                                </a>
                            </td>
                        </tr>
                }
            </tbody>
        </table>
    </div>
</div>